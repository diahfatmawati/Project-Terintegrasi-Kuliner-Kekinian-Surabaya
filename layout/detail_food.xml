<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9D6F1" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageFood"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:contentDescription="@string/makanan"
                    app:srcCompat="@drawable/seblakjeletotmpokadek" />

                <TextView
                    android:id="@+id/nameFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:text="@string/namefood"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/descFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/amaranth"
                android:justificationMode="inter_word"
                android:text="@string/deskripsifood"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/addressFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/alamatfood"
                android:textColor="#0000CD"
                android:justificationMode="inter_word"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/jargon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/acme"
                android:gravity="center_horizontal|center_vertical"
                android:text="Jajan Kekinian Arek-Arek suroboyo"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>